@import url('https://fonts.googleapis.com/icon?family=Material+Icons')
@import url('https://fonts.googleapis.com/css?family=Roboto')
body,html
	font-family 'Roboto', sans-serif
	margin 0
	padding 0
	background white
	font-size 16px
.material-icons
	margin 0 auto
	line-height 60px
.menu
	height 60px
	width 100%
	padding 0
	margin 0
	display flex
	background #ede7f6
	&__element
		padding 0 20px
		cursor pointer
		height 100%
		width auto
		min-width 60px
		float right
		display inline-block
		text-align center
		line-height 60px
		color #673ab7
		&:hover .dropdown__content
			display block
		&:hover
			background #673ab7
			color #ede7f6	
		&--main
			padding 0
			color white
			background #673ab7
			&:hover
				background #ede7f6
				color #673ab7
.element
	&__dropdown
		postion relative
		display block
.dropdown
	&__content
		display none
		position absolute
		top 60px
		left 0
		z-index 1
	&__button
		height 60px
		width auto
		min-width 180px
		background #673ab7
		color #ede7f6
		&:hover
			background #ede7f6
			color #673ab7
.form
	width 80%
	height auto
	font-size 1em
	color #673ab7
	background #ede7f6
	padding 10px
	margin 20px auto
	cursor default
	text-align left
	&__header
		width 100%
		height 60px 
		font-size 36px
		border-bottom 2px solid #673ab7
	&__content
		width 100%
		min-height 100px 		
		input,select,textarea
			margin 10px
			height 60px
			min-width 300px
			border none
			background #ede7f6
			font-family 'Roboto', sans-serif
			font-size 16px
			color grey
			border-bottom 2px solid grey
			padding 0 10px
			&:focus
				color #673ab7
				border-bottom 2px solid #673ab7
		ul
			list-style-type none
	&__submit
		width 100%
		height 60px 
		border-top 2px solid #673ab7